{
  "manifest_version": 3,
  "name": "Developer DOM Inspector",
  "version": "1.0.0",
  "description": "Inspect DOM elements visually",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
